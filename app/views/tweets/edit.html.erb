
<div class = "container">
	<div class = "row">
		<div class = "col-sm-offset-4 col-sm-4">
			<h2> New Tweet </h2>

			<%= form_for @twee, url: tweet_path(id: @twee.id), method: :put, class:'form-horizontal' do |f| %>
					<div class="form-group row"> 
						<%= f.label :post, class: "col-sm-2 control-label" %>
						<div class="col-sm-10">
							<%= f.text_field :post, class: "form-control" %> 
						</div>
					</div>

					<div class="form-group row">
						<div class="col-sm-offset-2 col-sm-10">
							<%= f.submit "Update", class: "btn btn-default" %>
						</div>
					</div>
					
					<div class="form-group row">
						<div class="col-sm-offset-2 col-sm-10">
							<%= link_to 'Back', tweets_path, class: "btn btn-info" %>
						</div>
					</div>
			<% end %>

		</div>
	</div>
</div>