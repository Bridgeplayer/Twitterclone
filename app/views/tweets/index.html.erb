<h1>All My Tweets</h1>

<table class="table table-hover">
	<thead>
		<th>User</th>
		<th>Post</th>
		<th>Like</th>
	</thead>
	
	<tbody>

	<% @twee.each do |twee| %>

		<tr>
			<td><%= twee.user %></td>
			<td><%= twee.post %></td>
			<td><%= distance_of_time_in_words(Time.now, twee.updated_at.localtime) %></td>
			<td>LIKE</td>
			<td><div class="buttons"><%= link_to "View", tweet_path(id: twee.id) %></div></td>
			<td><div class="buttons"><%= link_to "Edit", edit_tweet_path(id: twee.id) %></div></td>
			<td><div class="buttons"><%= link_to "Delete", tweet_path(id: twee.id), method: :delete %></div></td>

		</tr>

	<% end %>
			
	</tbody>
		
</table>
<div class="buttons"><%= link_to "New Tweet", new_tweet_path %></div>
