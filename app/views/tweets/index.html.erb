<h1>All My Tweets</h1>

<div class = "container">
	<div class = "row">
		<div class = "col-sm-offset-1 col-sm-10">

		<table class="table table-hover">
			<thead>
				<th>User</th>
				<th>Post</th>
				<th>Created At</th>
				<th>Following</th>
				<th>Followed By</th>
			</thead>
			
			<tbody>

			<% @twee.each do |twee| %>

				<tr>
					<td><%= twee.user.email %></td>
					<td><%= twee.post %></td>
					<td><%= distance_of_time_in_words(Time.now, twee.updated_at.localtime) %></td>
					<td><%= link_to @leadercount, tweets_path %></td>
					<td><%= link_to @followercount, follower_path %></td>
					<td><%= link_to "View", tweet_path(id: twee.id), class:"btn btn-primary" %></td>
					<td><%= link_to "Edit", edit_tweet_path(id: twee.id), class:"btn btn-info"%></td>
					<td><div class="buttons"><%= link_to "Delete", tweet_path(id: twee.id), method: :delete, class:"btn btn-warning" %></div></td>

				</tr>

			<% end %>
					
			</tbody>
				
		</table>
		<%= link_to "New Tweet", new_tweet_path, class:"btn btn-primary"%>
		<%= link_to "All my friends", tweets_path, class:"btn btn-success"%>

		</div>
	</div>
</div>
