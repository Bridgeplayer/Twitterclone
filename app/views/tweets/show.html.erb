<h1>My Tweet and a list of replies</h1>

<table class="table table-hover">
	<thead>
		<th>@twee.user</th>
		<th>@twee.post</th>
		<th>Like</th>
	</thead>
	
	<tbody>
	
	<%= form_for @repli, url: tweet_replies_path(tweet_id: @twee.id), method: :post do |f| %>

    <%= f.hidden_field :tweet_id %>

<p>
    <%= f.label :user %>
    <%= f.text_field :user %>
</p>
<p>
    <%= f.label :post %>
    <%= f.text_area :post %>
</p>
<%= f.submit 'Reply' %>

	<% end %>

	<% @twee.replies each do |replie| %>

		<tr>
			<td><%= replie.user %></td>
			<td><%= replie.post %></td>
			<td><%= distance_of_time_in_words(Time.now, replie.updated_at.localtime) %></td>
			<td>LIKE</td>
			<td><div class="buttons"><%= link_to "View", tweet_path(id: twee.id) %></div></td>
			<td><div class="buttons"><%= link_to "Edit", edit_tweet_path(id: twee.id) %></div></td>
			<td><div class="buttons"><%= link_to "Delete", tweet_path(id: twee.id), method: :delete %></div></td>

		</tr>

	<% end %>
			
	</tbody>
		
</table>
<div class="buttons"><%= link_to "New Tweet", new_tweet_path %></div>